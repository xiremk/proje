@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 text-center">
            <h1>Hoşgeldiniz</h1>
            <p>Lütfen giriş yapın veya kaydolun.</p>
            <div class="d-grid gap-2 d-md-block">
                <a class="btn btn-primary btn-lg" href="~/Account/Login">Giriş Yap</a>
                <a class="btn btn-secondary btn-lg" href="~/Account/Register">Kaydol</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .min-vh-100 {
            min-height: 100vh;
        }

        body {
            background-color: #f8f9fa;
        }

        h1 {
            margin-bottom: 20px;
        }

        p {
            margin-bottom: 30px;
        }
    </style>
}
