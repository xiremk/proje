@{
    ViewData["Title"] = "Excel Dosyası Yükle";
}

<h2>Excel Dosyası Yükle</h2>

<p>
    Excel şablonunu indirin: <a href="~/templates/template.xlsx" download>Şablonu İndir</a>
</p>

<!-- Hata mesajını göster -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="UploadExcel" asp-controller="Excel" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Excel Dosyası Yükle:</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Yükle</button>
</form>
